---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import ModernHero from "../components/ModernHero.astro";
import BenefitsSection from "../components/BenefitsSection.astro";
import ModernProjectSection from "../components/ModernProjectSection.astro";
import ModernStatisticsSection from "../components/ModernStatisticsSection.astro";
import ModernBillingSection from "../components/ModernBillingSection.astro";
import ModernTestimonials from "../components/ModernTestimonials.astro";
import FAQ from "../components/FAQ.astro";
import ModernContactSection from "../components/ModernContactSection.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <!-- Importar estilos de lazy loading -->
  <style>
    @import "../styles/lazyAppear.css";
  </style>
  
  <Header />
  <main>
    <section id="home">
      <ModernHero />
    </section>
    <section id="features">
      <BenefitsSection />
    </section>
    <section>
      <ModernProjectSection />
    </section>
    <section>
      <ModernStatisticsSection />
    </section>
    <section id="pricing">
      <ModernBillingSection />
    </section>
    <section id="testimonials">
      <ModernTestimonials />
    </section>
    <section id="faq">
      <FAQ />
    </section>
    <section id="contact">
      <ModernContactSection />
    </section>
  </main>
  <Footer />
</Layout>

<!-- Script de lazy loading -->
<script>
  import lazyAppear from '../scripts/lazyAppear.js';
  
  // Inicializar con configuraciÃ³n personalizada
  document.addEventListener('DOMContentLoaded', () => {
    lazyAppear.init({
      threshold: 0.15,
      rootMargin: '0px 0px -100px 0px'
    });
  });
</script>
